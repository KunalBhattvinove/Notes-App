<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/LinearLayout"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

     <ImageButton
         android:layout_width="30dp"
         android:layout_height="30dp"
         android:padding="5dp"
         android:id="@+id/allNotes"
         android:layout_marginStart="10dp"
         android:src="@drawable/ic_baseline_filter_list_24"
         android:background="@drawable/btn_fltr"/>

     <TextView
         android:layout_width="80dp"
         android:layout_height="wrap_content"
         android:text="High"
         android:textColor="@color/orange_red"
         android:background="@drawable/priority_btn"
         android:textSize="18sp"
         android:textAlignment="center"
         android:id="@+id/priorityHigh"
         android:layout_marginStart="20dp"
         android:padding="5dp"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Medium"
            android:textColor="#FFFF00"
            android:background="@drawable/priority_btn"
            android:textSize="18sp"
            android:textAlignment="center"
            android:id="@+id/priorityMedium"
            android:layout_marginStart="20dp"
            android:padding="5dp"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Low"
            android:textColor="#00FF00"
            android:background="@drawable/priority_btn"
            android:textSize="18sp"
            android:textAlignment="center"
            android:id="@+id/priorityLow"
            android:layout_marginStart="20dp"
            android:padding="5dp"/>


    </LinearLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecyclerALLNotes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LinearLayout"
      />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/FABAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

       android:layout_margin="30dp"
        android:backgroundTint="@color/orange_red"
        android:contentDescription="TODO"
        android:src="@drawable/ic_baseline_add_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>